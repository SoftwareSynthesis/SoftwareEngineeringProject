<?xml version = "1.0" encoding = "UTF-8"?>
<web-app xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xmlns = "http://java.sun.com/xml/ns/javaee" xmlns:web = "http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version = "3.0">
  	<display-name>MyTalk</display-name>
  	
  	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
  	</welcome-file-list>
  	
  	<!-- DEFINZIONE DELLE SERVLET -->
  	<servlet>
  		<servlet-name>Login</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.authentication.LoginServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>Logout</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.authentication.LogoutServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>getContacts</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.AddressBookGetContactsServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>addContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.AddressBookDoAddContactServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>removeContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.AddressBookDoRemoveContactServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>addInGroup</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.AddressBookDoInsertInGroupServlet</servlet-class>
  	</servlet>
  	
  	<!-- MAPPING DELLE SERVLET CON GLI URL -->
  	
  	<servlet-mapping>
    	<servlet-name>Login</servlet-name>
    	<url-pattern>/LoginAuthentication</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>Logout</servlet-name>
    	<url-pattern>/LoginClose</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>getContacts</servlet-name>
  		<url-pattern>/addressBookGetContacts</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>addContact</servlet-name>
  		<url-pattern>/addressBookDoAddContact</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>removeContact</servlet-name>
  		<url-pattern>/addressBookDoRemoveContact</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>addInGroup</servlet-name>
  		<url-pattern>/addressBookDoInsertInGroup</url-pattern>
  	</servlet-mapping>
</web-app>
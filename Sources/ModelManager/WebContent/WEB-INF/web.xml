<?xml version = "1.0" encoding = "UTF-8"?>
<web-app 	xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
			xmlns = "http://java.sun.com/xml/ns/javaee" 
			xmlns:web = "http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
			xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
			version = "3.0">
  	<display-name>MyTalk</display-name>
  	
  	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
  	</welcome-file-list>
  	
  	<!-- DEFINZIONE DELLE SERVLET DI LOGIN-->
  	<servlet>
  		<servlet-name>Login</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.authentication.servlet.LoginServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>Logout</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.authentication.servlet.LogoutServlet</servlet-class>
  	</servlet>
  	
  	<!-- DEFINIZIONE DELLE SERVLET PER LA GESTIONE DELLA RUBRICA PERSONALE -->
  	
  	<servlet>
  		<servlet-name>getContacts</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookGetContactsServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>addContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoAddContactServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>removeContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoRemoveContactServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>addInGroup</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoInsertInGroupServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>removeFromGroup</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoRemoveFromGroupServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>createGroup</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoCreateGroupServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>deleteGroup</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoDeleteGroupServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>blockContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoBlockServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>unblockContact</servlet-name>
  		<servlet-class>org.softwaresynthesis.mytalk.server.abook.servlet.AddressBookDoUnblockServlet</servlet-class>
  	</servlet>
  	
  	<!-- MAPPING DELLE SERVLET CON GLI URL PER IL LOGIN -->
  	
  	<servlet-mapping>
    	<servlet-name>Login</servlet-name>
    	<url-pattern>/LoginAuthentication</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>Logout</servlet-name>
    	<url-pattern>/LoginClose</url-pattern>
  	</servlet-mapping>
  	
  	<!-- MAPPING DELLE SERVLET CON GLI URL PER LA GESTIONE RUBRICA -->
  	
  	<servlet-mapping>
  		<servlet-name>getContacts</servlet-name>
  		<url-pattern>/addressBookGetContacts</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>addContact</servlet-name>
  		<url-pattern>/addressBookDoAddContact</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>removeContact</servlet-name>
  		<url-pattern>/addressBookDoRemoveContact</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>addInGroup</servlet-name>
  		<url-pattern>/addressBookDoInsertInGroup</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>removeFromGroup</servlet-name>
  		<url-pattern>/addressBookDoRemoveFromGroup</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>createGroup</servlet-name>
  		<url-pattern>/addressBookDoCreateGroup</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>deleteGroup</servlet-name>
  		<url-pattern>/addressBookDoDeleteGroup</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>blockContact</servlet-name>
  		<url-pattern>/addressBookDoBlock</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>unblockContact</servlet-name>
  		<url-pattern>/addressBookDoUnblock</url-pattern>
  	</servlet-mapping>
</web-app>
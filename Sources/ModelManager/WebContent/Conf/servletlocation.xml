<?xml version="1.0" encoding="UTF-8"?>

<configuration xmlns="http://softwaresynthesis.org">
	<baseURL>http://localhost:8080/MyTalk/</baseURL>
	<servletGroup name="login">
		<servlet id="authentication">LoginAuthentication</servlet>
		<servlet id="registration">LoginDoRegistration</servlet>
		<servlet id="close">LoginClose</servlet>
		<servlet id="question">LoginGetSecretQuestion</servlet>
		<servlet id="answer">LoginDoSecretAnswer</servlet>
	</servletGroup>
	<servletGroup name="addressbook">
		<servlet id="addcontact">AddressBookDoAddContact</servlet>
		<servlet id="block">AddressBookDoBlock</servlet>
		<servlet id="creategroup">AddressBookDoCreateGroup</servlet>
		<servlet id="deletegroup">AddressBookDoDeleteGroup</servlet>
		<servlet id="insert">AddressBookDoInsertInGroup</servlet>
		<servlet id="remove">AddressBookDoRemoveFromGroup</servlet>
		<servlet id="search">AddressBookDoSearch</servlet>
		<servlet id="unblock">AddressBookDoUnblock</servlet>
		<servlet id="getgroups">AddressBookGetGroups</servlet>
		<servlet id="getcontacts">AddressBookGetContacts</servlet>
		<servlet id="deletecontact">AddressBookDoDeleteContact</servlet>
	</servletGroup>
	<servletGroup name="callhistory">
		<servlet id="getcalls">DownloadCallHistory</servlet>
	</servletGroup>
	<servletGroup name="message">
		<servlet id="getmessages">DownloadMessageList</servlet>
		<servlet id="createmessage">InsertMessage</servlet>
		<servlet id="deletemessage">DeleteMessage</servlet>
		<servlet id="setmessagestatus">UpdateStatusMessage</servlet>
	</servletGroup>
</configuration>